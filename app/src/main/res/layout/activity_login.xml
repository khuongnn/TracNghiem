<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_login">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:text="login"
            android:textAllCaps="true"
            android:textColor="@color/textColorWhite"
            android:textSize="50sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20dp"
            android:paddingEnd="@dimen/_20dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_text_height"
                android:background="@color/edtEmailBackground"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:maxLength="255"
                android:paddingStart="@dimen/_20dp"
                android:paddingEnd="@dimen/_20dp"
                android:textColorHint="@color/loginHintColor"
                android:textSize="@dimen/text_size_14" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_text_height"
                    android:background="@color/edtEmailBackground"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:paddingStart="@dimen/_20dp"
                    android:paddingEnd="@dimen/_20dp"
                    android:textColorHint="@color/loginHintColor"
                    android:textSize="@dimen/text_size_14" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/errLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llEdt"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:paddingStart="@dimen/_20dp"
            android:paddingTop="@dimen/_10dp"
            android:paddingEnd="@dimen/_20dp"
            android:textColor="@color/loginErrorTextColor"
            android:textSize="@dimen/text_size_14"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/llEdt"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_60dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@color/loginButtonColor"
            android:gravity="center"
            android:text="login"
            android:textAllCaps="true"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginWith"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/btnLogin"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:textAllCaps="true"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@color/loginButtonColor"
            android:gravity="center"
            android:text="LOGIN WITH"
            android:textStyle="bold"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/text_size_14" />

        <RelativeLayout
            android:id="@+id/loginLoad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">
            <include
                layout="@layout/loading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>

</layout>