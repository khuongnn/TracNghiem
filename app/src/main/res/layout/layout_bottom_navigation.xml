<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_navigation_height"
    android:animateLayoutChanges="true"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/llCourses"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCourses"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:src="@drawable/ic_course" />

        <TextView
            android:id="@+id/tvCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses"
            android:textColor="@color/textColorWhite"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPractice"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgPractice"
            android:src="@drawable/book_inactive"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"/>

        <TextView
            android:id="@+id/tvPractice"
            android:visibility="gone"
            android:text="Practice"
            android:textSize="12sp"
            android:textColor="@color/textColorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMyPage"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgMyPage"
            android:src="@drawable/setting_inactive"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"/>

        <TextView
            android:id="@+id/tvMyPage"
            android:text="Settings"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/textColorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
